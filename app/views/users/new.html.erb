 <%
=begin%>
 <form action="/users" method="post" accept-charset="UTF-8">
 <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <label for="username">Name:</label>
  <input type="text" name="user[username]"><br><br>
  <label for="email">Email:</label>
  <input type="text" name="user[email]"><br><br>
   <label for="password">Password:</label>
  <input type="text" name="user[password]"><br><br>
  <input type="submit" value="Submit">
</form>  
<%
=end%>

<%
=begin%>
 <%= form_tag('/users' , method: 'post' )do %>
  <%=label_tag 'user[username]', 'username:' %>
  <%=text_field_tag 'user[username]' %> <br>
  <%=label_tag 'user[email]', 'email: ' %>
  <%=email_field_tag 'user[email]' %> <br>
  <%=label_tag 'user[password]', 'password: '%>
  <%=password_field_tag 'user[password]' %> <br>
  <%= submit_tag 'Submit' %> <br>
<%end%> 
<%
=end%>

<%= form_for @user, html: {:class => "needs-validation"}  do |f| %>  
  <% @user.errors.full_messages.each do |error| %>
  <li><%= error %></li><br>
  <% end %>
  <%= f.label :username, 'Your Username here:'%>
  <%= f.text_field :username%><br><br>
  <%= f.label :email, 'Email: '%>
  <%= f.text_field :email, placeholder: 'username@gmail.com'%><br><br>
  <%= f.label :password, 'Password'%>
  <%= f.password_field :password, placeholder: 'password here' %><br><br>
  <%= f.submit 'Save'%>
<% end %>
